# INCLUDE DOCKERFIULE WORK HERE
FROM python:3.8.2

#cding to my home dir always works? - can we talk about how that works
ENV  HOME /root

WORKDIR /root

COPY Flask .

# installing dependices
RUN pip install -r requirements.txt
# all the photos,icons too?
EXPOSE 8000


# # delay for the DB and the container upload
ADD https://github.com/ufoscout/docker-compose-wait/releases/download/2.2.1/wait /wait
RUN chmod +x /wait

